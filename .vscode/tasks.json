{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"dockerHost": "http://192.168.0.10:2375",
				"pull":true
			},
			
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node"
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"env": {
					"DEBUG": "*",
					"NODE_ENV": "production"
				},
				"command": "-v /mnt/user/appdata/cert:/usr/src/app/src/cert",
				"containerName": "wolf",
				"network": "kraken",

			},
			"node": {
				"enableDebugging": true
			}
		}
	]
}